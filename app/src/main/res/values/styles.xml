<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Disable keyboard full screen in landscape mode -->
        <item name="android:imeOptions">flagNoExtractUi</item>

        <!-- Disable keyboard appear and automatic layout move if keyboard overlay edittext -->
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>

        <!-- Hide label in activity -->
        <item name="android:windowNoTitle">true</item>


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorControlNormal">@color/gray_1</item>-->
        <!--<item name="colorControlActivated">@color/red_old</item>-->
        <!--<item name="colorControlHighlight">@color/red_old</item>-->

        <!--&lt;!&ndash; change icon navigation drawer indicator color&ndash;&gt;-->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

