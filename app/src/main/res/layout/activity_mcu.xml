<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.eazyhealth.id.app.activity.MCUActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <!-- add shadow -->
            <!--app:popupTheme="@style/AppTheme.PopupOverlay"-->
            <view
                android:id="@+id/title_tv"
                style="@style/text_view_big_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                class="net.eazyhealth.id.app.custom.CustomTextView"
                android:text="PASIEN"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/appbar">
        <view
            android:id="@+id/rv_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            class="net.eazyhealth.id.app.custom.CustomRippleView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/filter"
                    android:paddingRight="5dp"/>
                <view
                    style="@style/text_view_normal_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="net.eazyhealth.id.app.custom.CustomTextView"
                    android:text="@string/filter"/>
            </LinearLayout>
        </view>
        <view
            android:id="@+id/rv_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            class="net.eazyhealth.id.app.custom.CustomRippleView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sorting"
                    android:paddingRight="5dp"/>
                <view
                    style="@style/text_view_normal_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="net.eazyhealth.id.app.custom.CustomTextView"
                    android:text="@string/sorting"/>
            </LinearLayout>
        </view>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/sort"
        android:background="@android:color/white">
        <view
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="net.eazyhealth.id.app.custom.CustomSwipeRefreshLayout">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </view>
    </FrameLayout>
</RelativeLayout>
