<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="@dimen/corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <view
                    android:id="@+id/clinic"
                    style="@style/text_view_very_big_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="net.eazyhealth.id.app.custom.CustomTextView"
                    android:text="Klinik Prodea"
                    android:singleLine="true"
                    android:ellipsize="end" />
                <view
                    android:id="@+id/type"
                    style="@style/text_view_normal_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="net.eazyhealth.id.app.custom.CustomTextView"
                    android:text="Check darah"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <view
                    android:id="@+id/package_medical"
                    style="@style/text_view_small_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="net.eazyhealth.id.app.custom.CustomTextView"
                    android:text="Paket A : non trombosit"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <view
                    android:id="@+id/date"
                    style="@style/text_view_small_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="net.eazyhealth.id.app.custom.CustomTextView"
                    android:text="Selasa, 28 Maret 2016"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/btn_pink"
                    android:gravity="center">

                    <view
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        class="net.eazyhealth.id.app.custom.CustomImageView"
                        android:src="@drawable/ic_add_cart" />

                    <view
                        style="@style/text_view_small_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        class="net.eazyhealth.id.app.custom.CustomTextView"
                        android:text="Add"
                        android:layout_below="@+id/package_medical"
                        android:paddingLeft="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <view
                        android:id="@+id/btnDetail"
                        style="@style/text_view_normal_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_button"
                        class="net.eazyhealth.id.app.custom.CustomTextView"
                        android:text="Detail>>"
                        android:background="@drawable/btn_grey" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>